{
    "manifest_version": 2,
    "name": "Trapper",
    "description": "New way logging your applications error or info messages",
    "version": "1.0",
    "minimum_chrome_version": "10.0",
    "devtools_page": "trapper.html",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "icons": {
        "16": "tr16.png",
        "48": "tr48.png",
        "128": "tr128.png"
    },
    "permissions": [
        "tabs",
        "<all_urls>",
        "*://*/*"
    ]
}